{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "commonjs",
    "target": "es2022",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@note-app/note-repository": ["domain/note-repository/src/index.ts"],
      "@notes-app/common": ["common/src/index.ts"],
      "@notes-app/database-service": ["data/database/src/index.ts"],
      "@notes-app/express-common": ["express-common/src/index.ts"],
      "@notes-app/queue-service": ["data/queue/src/index.ts"],
      "@notes-app/storage-service": ["data/storage/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
